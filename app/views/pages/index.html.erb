<p id='notice'><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th colspan=3></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td> <%= page.name %> </td>
        <td><%= link_to 'View', page_path(page), class: 'btn btn-sm btn-default' %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Delete', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     <% end %>
  </tbody>
</table>

