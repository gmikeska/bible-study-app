<%= toolbar(link_to('New Gallery', new_gallery_path, class:'btn btn-sm btn-default')) %>


<h1> Galleries </h1>
<%= render(TableComponent.new(records:@galleries,fields:[:name_titleize, :files_count])) do |component| %>
  <% component.with(:header) do %>
    <%= component.table_header(fields:[:name]) %>
  <% end %>
  <% component.with(:placeholder) do %>
    There are no galleries yet.
  <% end %>
<% end %>
