<div class='container' id='fileList'>
  <table class='table'>
    <thead>
      <th>Image</th>
      <th>Name</th>
      <th>Created at:</th>
      <th>Size</th>
      <th colspan=2></th>
    </thead>
    <tbody>
      <% @gallery.files.each do |file| %>
      <tr>
        <% if(@gallery.is_image(file)) %>
        <td><%= image_tag file.variant(resize_to_limit: [100, 100]) %></td>
        <% elsif(file.previewable?()) %>
        <td><%== preview_video(file,@gallery.url_for(file)) %> </td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= link_to file.filename, @gallery.url_for(file) %></td>
        <td><%= file.created_at %></td>
        <td><%= file.byte_size/1000 %> kB</td>
        <td><%= link_to 'View', url_for(file), class: 'btn btn-sm btn-default' %></td>
        <td><%= link_to 'Delete', file, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
