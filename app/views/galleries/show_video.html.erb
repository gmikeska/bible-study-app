<video-js id="videoPlayer" class="vjs-big-play-centered" controls>
  <% if(url.present?) %>
    <source src=<%= url %> type="video/mp4">
  <% elsif(gallery.present? && file.present?) %>
    <source src=<%= gallery.get_url(file) %> type="video/mp4">
  <% end %>
Videos are not supported in this browser. Please download a <a href="https://browsehappy.com/">Modern web browser.</a>
</video-js>
<script type="text/javascript">
$(()=>{
  videojs($('#videoPlayer')[0])
})
</script>
