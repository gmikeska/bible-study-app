

<h1>Payments</h1>

<table class="table">
  <thead>
    <tr>
      <td>User</td>
      <td>Amount</td>
      <td>Funding Category</td>
      <td>Payment Method</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user.name %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.category %></td>
        <td><%= payment.payment_method %></td>
        <td><%= view_button payment%></td
        <% if(current_user.isStaff?)%>
          <td><%= edit_button edit_payment_path(payment) %></td>
          <td><%= delete_button payment %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
