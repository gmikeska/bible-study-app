<div class="row">
  <h1>Lesson: <%= @lesson.name %></h1>
</div>
    <%
    buttons = [back_button(course_lesson_path(@lesson.course,@lesson))]
    %>
      <%= toolbar(buttons, class:"border") %>
<div class="row">
  <h2> <%= @file.filename.base.to_s.titleize %> </h2>
</div>

<div class="row">
  <div class="col">
    &nbsp
  </div>
  <div class="col">
    <video-js id="videoPlayer" class="vjs-big-play-centered" controls>
      <source src=<%= url_for(@file) %> type="video/mp4">
    Videos are not supported in this browser. Please download a <a href="https://browsehappy.com/">Modern web browser.</a>
    </video-js>
  </div>
  <div class="col">
    &nbsp
  </div>
</div>
<script type="text/javascript">
  $(()=>{
    videojs($('#videoPlayer')[0])
    videojs($('#videoPlayer')[0]).height(300)
  })
</script>
