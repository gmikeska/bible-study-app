

<h1>Donations</h1>

<table class="table">
  <thead>
    <tr>
      <td>User</td>
      <td>Amount</td>
      <td>Funding Category</td>
      <td>Payment Method</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.user.name %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.category %></td>
        <td><%= donation.payment_method %></td>
        <td><%= view_button donation%></td
        <% if(current_user.isStaff?)%>
          <td><%= edit_button edit_donation_path(donation) %></td>
          <td><%= delete_button donation %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
