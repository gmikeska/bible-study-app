<h1>Courses</h1>
<% if(current_user.present? && current_user.isStaff?)%>
<%= link_to 'New Course', new_course_path, class: 'btn btn-sm toolbar btn-default' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Visibility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td> <%= course.name %> </td>
        <td> <%= course.description %> </td>
        <td> <%= course.visibility %> </td>
        <td><%= view_button(course) %></td>
        <td><%= edit_button(edit_course_path(course), class: 'btn btn-sm btn-secondary') %></td>
        <td><%= delete_button(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course|
     if(current_user.courses.include? course)
        viewText = "View"
      else
        viewText = "Learn More"
      end %>
      <tr>
        <td> <%= course.name %> </td>
        <td> <%= course.description %> </td>
        <td> <%= link_to viewText, course, class:"btn btn-sm btn-default" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
