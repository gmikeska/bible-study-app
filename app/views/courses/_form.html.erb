<%= bootstrap_form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field row'>
    <div class='col'>
      <%= form.text_field :name %>
    </div>
    <div class='col'>
      <%= form.select :visibility, [['Public', "visibility_hidden"], ['Enrolled', "visibility_enrolled"], ['Private', "visibility_public"]], selected:course.visibility %>
    </div>
  </div>
  <div class='field row'>
    <div class='col'>
      <%= form.text_field :price %>
    </div>
  </div>

  <div class='field'>
    <%= form.text_field :description %>
  </div>
  <div class='field'>
    <%= form.text_area :summary, id:"editor" %>
  </div>


  <div class="actions">
    <%= form.submit "Save Changes", class:"btn btn-default" %>
  </div>
<% end %>
