<% if(current_user.isStaff?)
    fields = [:name, :description, :visibility]
    edit = true;
    delete = true;
  else
    fields = [:name, :description]
    edit = false;
    delete = false;
  end
%>

<%= render(TableComponent.new(records:lessons,fields:fields, edit:edit, delete:delete)) do |component| %>
  <% component.with(:header) do %>
      <%= component.table_header %>
  <% end %>
  <% component.with(:placeholder) do %>
    There are no lessons yet.
  <% end %>
<% end %>
