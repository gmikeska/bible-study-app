

<h1>Quizzes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Lesson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.course.name.to_s %></td>
        <td><%= quiz.lesson.name.to_s %></td>
        <td><%= view_button([quiz.course, quiz.lesson.chapter, quiz.lesson, quiz]) %></td>
        <td><%= edit_button edit_course_chapter_lesson_quiz_path(quiz.course, quiz.lesson.chapter, quiz.lesson, quiz), class:'btn btn-sm btn-secondary' %></td>
        <td><%= delete_button([quiz.course, quiz.lesson.chapter, quiz.lesson, quiz]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
