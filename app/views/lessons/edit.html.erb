<h1>Editing Lesson</h1>

  <%= toolbar([back_button(course_path(@lesson.course)), view_button(lesson_path(@lesson))]) %>
  <div class="container border" style="margin-bottom: 1%;width: 45%;margin-left: 0%;">
    <div class="row">
      <div class="col border btn-default" style="margin-bottom: 1%;">
        Lesson files
      </div>
    </div>
  <% @lesson.files.each do |file| %>
  <div class="row" style="margin-bottom: 10px;">
      <div class="col-6" style="padding-top:1%;">
          <a href="<%= lesson_file_path(@lesson, file.filename.to_s) %>" style="color:#4b1310;"><%= file.filename.to_s %></a>
      </div>
      <div class="col">
        &nbsp
      </div>
      <div class="col">
          <%= link_to 'Delete', lesson_path(@lesson)+"/delete_file/#{file.id}", method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>
  </div>
  <% end %>
  </div>
  <div class="field">
    <%= link_to 'Upload File', "#", class: 'btn btn-sm btn-default toolbar', id:"startUpload" %>
  </div>
<div class="container">
  <%= render 'form', lesson:@lesson %>
</div>

<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Upload Files</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'add_file', lesson: @lesson %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-default" id="submit">Upload</button>
      </div>
    </div>
  </div>
</div>
<script>

    $('body').ready(()=>{
      completeUpload = ()=>{
        pth = $("#pathHolder").data("path")
        pth = pth.replace('upload','show_files')
        $.get(pth,(content)=>{
            $("#fileList").replaceWith(content)
        })
        $('#uploadModal').modal('hide')
      }
      $('#uploadModal').modal({
        show: false
      })
      $('input','.actions').hide()
      $('#startUpload').click((e)=>{
        e.preventDefault()
        $('#uploadModal').modal('show')
      })
      $('#submit').click((e)=>{
        e.preventDefault()
        uf = $('form').last()[0]
        // debugger
        data = new FormData(uf)
        for(let n=0; n < $(':file')[0].files.length; n++)
        {
          data.append("files",$(':file')[0].files[0])
        }
        $(document).on("direct-upload:progress",(e)=>{
          console.log(e)
        })
        debugger
      $.ajax({
            url: $('form',"#uploadModal")[0].action,
            data: data,
            type: "POST",
            contentType: false,
            processData: false,
            success:()=>{
              completeUpload()
            }
        });
        path =  $('form')[0].action
        $('.modal-body').empty()
        $('.modal-body').html(`<div class="d-flex justify-content-center"><div class="spinner-grow" role="status">
          <div id="pathHolder" data-path="${path}" style="hidden:true"></div><span class="sr-only">Loading...</span></div></div>`)
      })
    })
  </script>
