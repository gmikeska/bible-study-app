

<h1><%= @bible.name %></h1>
<h3>Available Books<h3>
<table class="table">
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Abbreviation</th>
      <th>Book Name</th>
      <th>Description</th>
      <th>Chapter Count</th>
    </tr>
  </thead>
  <tbody>
    <% @bible.books.each do |book| %>
      <tr>
        <td><%= book["id"] %></td>
        <td><%= book["abbreviation"] %></td>
        <td><%= book["name"] %></td>
        <td><%= book["nameLong"] %></td>
        <% if(book['chapters'].present?) %>
        <td><%= book['chapters'].length %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
