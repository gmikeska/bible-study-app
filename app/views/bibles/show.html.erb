

<h1><%= @bible.name %></h1>
<h3>Available Books<h3>
<table class="table">
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Book Name</th>
      <th>Description</th>
      <th>Chapter Count</th>
    </tr>
  </thead>
  <tbody>
    <% @bible.books.each do |book| %>
      <tr>
        <td><%= book[:id] %></td>
        <td><%= book[:name] %></td>
        <td><%= book[:nameLong] %></td>
        <% if(book[:chapters].present? && book[:chapters].length > 0) %>
        <td><%= book[:chapters].length %></td>
        <% else %>
        <td><%= link_to "Load Chapters", load_bible_book_path(book_index:@bible.books.index(book)),class:"btn btn-sm btn-default" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
