<p id='notice'><%= notice %></p>
<%= toolbar([back_button(:back),link_to('New Page', new_page_path, class: 'btn btn-sm btn-default')]) %>

<h1>Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan=3></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td> <%= page.name.titleize %> </td>
        <td><%= link_to 'View', page_path(page), class: 'btn btn-sm btn-default' %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-sm btn-secondary' %></td>
        <td><%= link_to 'Delete', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
     <% end %>
  </tbody>
</table>

<br>
