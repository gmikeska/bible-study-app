<h1>My Pets</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Birthday</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>

    <% @user.pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.species.capitalize %></td>
        <td><%= pet.birthday %></td>
        <td><%= link_to 'View', pet,class: 'btn btn-sm btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
