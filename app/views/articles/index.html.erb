
<h1>Articles</h1>
<%= link_to 'New Article', new_article_path, class:"btn btn-default toolbar" %>

<%= render(TableComponent.new(fields:[:title])) do |component| %>
  <% component.with(:header) do %>
      <%= RecordComponent.new(fields:component.fields, show:component.show, edit:component.edit, delete:component.delete).header %>
    <% end %>
  <% component.with(:body) do %>
    <%= render RecordComponent.with_collection(@articles,fields:component.fields, show:component.show, edit:component.edit, delete:component.delete) %>
  <% end %>
  <% component.with(:placeholder) do %>
    There are no articles yet.
  <% end %>
<% end %>
