<%= bootstrap_form_with(model: help, local: true) do |form| %>
  <% if help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(help.errors.count, "error") %> prohibited this help from being saved:</h2>

      <ul>
        <% help.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if(@help.missing_sections.present? && @help.missing_sections.length >0) %>
    <div class="border">
      This help article is missing the following sections referenced in the app:<br>
      <ul>
        <% @help.missing_sections.each do |section| %>
          <li><%= section %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field col">
      <%= form.text_field :title %>
    </div>
    <div class="field col">
      <% if(@category.present?) %>
        <%= form.text_field :category, value:@category %>
      <% else %>
        <%= form.text_field :category, value:help.category %>
      <% end %>
    </div>
  </div>
  <div class="field">
    <%= form.text_area :description %>
  </div>
  <div class="row">
    <% if(current_user.present? && is_dev(current_user))%>
      <div class="field col-4">
        <%= form.check_box :system %>
      </div>
    <% end %>
  </div>
  <%= render FoldingComponent.new(name:"images", title:"Image Gallery",starts_expanded:false) do |component| %>
  <% component.with(:body) do
      @gallery = Gallery.find_by(name:"Images")
  %>
  <%= link_to('Upload File', "#", class: 'btn btn-sm btn-default', id:"startUpload") %>
  <div class='container' id='fileList'>
    <table class='table'>
      <thead>
        <th>Preview</th>
        <th>Name</th>
        <th>Address in Article</th>
      </thead>
      <tbody>
    <% @gallery.files.each do |f| %>
          <% @gallery.files.each do |file| %>
          <tr>
            <td><%= render("galleries/file_preview", file:file, link:gallery_show_file_path(@gallery, file)+"?filename=#{file.filename.to_s}")%></td>
            <td><%= link_to(file.filename, gallery_show_file_path(@gallery)+"?filename=#{file.filename.to_s}") %></td>
            <td><%= @gallery.url_for(file) %></td>


          </tr>
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>
    <% end
  end %>
  <%=  %> <%= help_text("model:help:images#uploading", type: :tooltip) %>
  <div class="field">
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Upload Files</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'galleries/add_file', gallery: @gallery %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-default" id="submit">Upload</button>
      </div>
    </div>
  </div>
</div>
<script>
    $('body').ready(()=>{
      completeUpload = ()=>{
        pth = $("#pathHolder").data("path")
        pth = pth.replace('upload','show_files')
        $.get(pth,(content)=>{
            $("#fileList").replaceWith(content)
        })
        $('#uploadModal').modal('hide')
      }
      $('#uploadModal').modal({
        show: false
      })
      $('input','.actions').hide()
      $('#startUpload').click((e)=>{
        e.preventDefault()
        $('#uploadModal').modal('show')
      })
      $('#submit').click(()=>{
        uf = $('form')
        data = new FormData($('form')[0])
        for(let n=0; n < $(':file')[0].files.length; n++)
        {
          data.append("files",$(':file')[0].files[0])
        }
        $.ajax({
            url: $('form')[0].action,
            data: data,
            type: 'POST',
            contentType: false,
            processData: false,
            success:()=>{
              completeUpload()
            }
        });
        path =  $('form')[0].action
        $('.modal-body').empty()
        $('.modal-body').html(`<div class="d-flex justify-content-center"><div class="spinner-grow" role="status">
          <div id="pathHolder" data-path="${path}" style="hidden:true"></div><span class="sr-only">Loading...</span></div></div>`)
      })
    })
  </script>
<style media="screen">
  #help_description{
    min-height: 100px;
    font-family: monospace;
  }
  #help_content{
    min-height: 300px;
    font-family: monospace;
  }
</style>
